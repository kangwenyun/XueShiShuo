<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/system_notice"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/system_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/system_notice"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/singleline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/system_notice"
            android:layout_alignLeft="@id/system_notice"
            android:text="@string/singleline_text"/>
        <TextView
            android:id="@+id/system_notice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/singleline_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/system_notice_time"/>
    </RelativeLayout>
</LinearLayout>
