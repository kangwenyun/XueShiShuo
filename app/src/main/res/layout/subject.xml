<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:textSize="20sp"
            android:text="@string/chinese"/>
        <TextView
            android:id="@+id/middle_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/chinese"
            android:layout_marginLeft="70dp"
            android:text="@string/middle_school"/>
        <TextView
            android:id="@+id/class_hour_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/middle_school"
            android:layout_marginLeft="15dp"
            android:text="@string/class_hour_cost"/>
        <TextView
            android:id="@+id/cost1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/class_hour_cost"
            android:text="20"
            android:textColor="#8EE5EE"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cost1"
            android:text="@string/unit"/>
        <TextView
            android:id="@+id/high_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/middle_school"
            android:layout_below="@id/middle_school"
            android:layout_marginTop="10dp"
            android:text="@string/high_school"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/class_hour_cost"
            android:layout_alignTop="@id/high_school"
            android:text="@string/class_hour_cost"/>
        <TextView
            android:id="@+id/cost2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/class_hour_cost"
            android:layout_alignTop="@id/high_school"
            android:text="30"
            android:textColor="#8EE5EE"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cost2"
            android:layout_alignTop="@id/high_school"
            android:text="@string/unit"/>
    </RelativeLayout>
</LinearLayout>
