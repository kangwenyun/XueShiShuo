<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#8FC5CF"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/find_key_back"
            android:layout_width="32px"
            android:layout_height="54px"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:onClick="back"
            android:src="@mipmap/back1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="@string/find_the_key"
                android:textSize="48px"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54px"
        android:layout_marginBottom="54px"
        android:layout_marginLeft="24px"
        android:text="@string/identity_authentication"
        android:textSize="48px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white">
        <EditText
            android:id="@+id/input_phone_number_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54px"
            android:layout_marginBottom="54px"
            android:layout_marginLeft="24px"
            android:background="@android:color/transparent"
            android:hint="@string/input_phone_number_hint"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/input_verification_code_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54px"
            android:layout_marginLeft="24px"
            android:layout_marginBottom="54px"
            android:background="@android:color/transparent"
            android:hint="@string/input_verification_code_hint"
            android:textSize="48px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/get_verification_code"
                android:layout_width="240px"
                android:layout_height="96px"
                android:layout_marginRight="24px"
                android:layout_gravity="right"
                android:background="@drawable/rect_corner"
                android:text="@string/get_verification_code"
                android:textSize="36px"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54px"
        android:layout_marginBottom="54px"
        android:layout_marginLeft="24px"
        android:background="@android:color/transparent"
        android:text="@string/set_new_key"
        android:textSize="48px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white">
        <EditText
            android:id="@+id/input_the_new_key_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54px"
            android:layout_marginBottom="54px"
            android:layout_marginLeft="24px"
            android:background="@android:color/transparent"
            android:password="true"
            android:hint="@string/input_the_new_key_hint"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white">
        <EditText
            android:id="@+id/input_the_new_key_again_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54px"
            android:layout_marginBottom="54px"
            android:layout_marginLeft="24px"
            android:background="@android:color/transparent"
            android:password="true"
            android:hint="@string/input_the_new_key_again_hint"
            android:textSize="15sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/confirm_1"
        android:layout_width="1030px"
        android:layout_height="150px"
        android:layout_marginTop="136px"
        android:layout_marginLeft="25px"
        android:gravity="center"
        android:background="#8FC5CF"
        android:text="@string/confirm"
        android:textSize="48px"
        android:textColor="@color/white"/>

</LinearLayout>
